
{{#modal-dialog title="modal" id="modal" action="close"}}

  <div class="modal-header text-center">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">HandStack</h4>
  </div>



<div role="tabpanel">
  <!--tab list-->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#login" aria-controls="login" role="tab" data-toggle="tab">Log In</a></li>
    <li role="presentation"><a href="#signup" aria-controls="signup" role="tab" data-toggle="tab">Sign Up</a></li>
  </ul>

  <!--tab content-->
  <div class="tab-content">
    <!--login tab-->
    <div role="tabpanel" class="tab-pane active" id="login">

        <div class="modal-body text-center">
        <p>
        <button {{action "loginFacebook"}} class="btn btn-default">
          {{fa-icon "facebook"}}
            Sign in with Facebook
        </button>

        </p>
        <p>

        <button {{action "loginTwitter"}} class="btn btn-default">
          {{fa-icon "twitter"}}
            Sign in with Twitter
        </button>

        </p>

        <form class="form-horizontal">
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              <input type="email" class="form-control" id="inputEmail3" placeholder="Email">
              <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10">
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Remember me
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10">
              <button {{action "login"}} class="btn btn-default">Log In</button>
            </div>
          </div>
        </form>
        </div>


      </div>

    <!--signup tab-->
    <div role="tabpanel" class="tab-pane active" id="signup">
                <div class="modal-body text-center">
        <p>
        <button {{action "loginFacebook"}} class="btn btn-default">
          {{fa-icon "facebook"}}
            Sign up with Facebook
        </button>

        </p>
        <p>

        <button {{action "loginTwitter"}} class="btn btn-default">
          {{fa-icon "twitter"}}
            Sign up with Twitter
        </button>

        </p>

        <form class="form-horizontal">
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-1">
              {{input value=name id="name" placeholder="Your Name"}}
              {{input type="email" value=email id="email" placeholder="Email"}}
              {{input type="password" value=password id="password" placeholder="Password"}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10">
              <button {{action "createUser"}} class="btn btn-default">Sign Up</button>
            </div>
          </div>
        </form>
        </div>
    </div>

  </div>



</div>

{{/modal-dialog}}
